<section id="solicitud" class="white-section unique-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        <form id="wizard" action="#">
                          
                            <h3>Reserva tu Cita</h3>
                            <fieldset class="step-content">
                                <div class="row" style="margin-top: -10px;">
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="contact-box" style="padding: 10px 20px; margin: 0px 0px 10px;">
                                            <div class="row">
                                                <div class="col-lg-4 col-md-3 col-sm-12">
                                                    
                                                    <div class="for-group" id="select-week" style="width: 100%;">
                                                        <h2 class="col-sm-10" style="font-size: 18px; margin: 10px 0px;">Seleccione su horario: </h2>                
                                                        <div class="input-group date" style="cursor: pointer; width: 30px;">
                                                            <span class="input-group-addon" style="border: 0px;">
                                                                <i class="fa fa-calendar fa-2x"></i>
                                                            </span>
                                                            <input name="week" type="text" style="display: none;" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-8 col-md-9 col-sm-12">
                                                    <div class="row">
                                                        <label class="col-sm-1" style="margin: 10px 0px;">Desde</label>
                                                            <div class="col-sm-3" id="week-star">
                                                                <input type="text" class="form-control text-center" disabled>
                                                            </div>
                                                            <label class="col-sm-1" style="margin: 10px 0px;">Hasta</label>
                                                            <div class="col-sm-3" id="week-end">
                                                                <input type="text" class="form-control text-center" disabled>
                                                            </div>
                                                            <%= hidden_field_tag :slug, @servicio["slug"] %>
                                                            <div class="btn-content col-sm-4 text-center">
                                                            <%= link_to "Buscar horario", buscar_semana_path(:slug => @servicio["slug"], :week_star => Date.today), remote: true, class: "btn btn-dark-blue btn-buscar-horario", id: "boton_horario" %>
                                                            </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3 col-md-4 col-sm-4">
                                        <div class="contact-box">
                                            <div class="col-sm-12">
                                                <div class="text-center">
                                                    <img alt="image" class="img-circle m-t-xs img-responsive" src="<%= image_url 'landing/default_profile.png' %>" width= "100px" style="margin: 0px auto;">
                                                    <div class="m-t-xs font-bold">Ver Especialidades</div>

                                                    <select class="selectpicker form-control">
                                                         <% @servicio["especialista"]["especialidades"].each do |especialidad| %>
                                                                <option><%= especialidad['descripcion'] %></option>
                                                        <% end %>
                                                    </select> 
                                                </div>
                                            </div>
                                            <div class="col-sm-12">
                                                <h3><strong><%= @servicio["especialista"]["persona"]["nombre"]+' '+@servicio["especialista"]["persona"]["apellido"]%></strong></h3>
                                                
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-9 col-md-8 col-sm-8">
                                        <div class="ibox float-e-margins">
                                            <div class="ibox-content">
                                                <table class="tabla-horarios table table-bordered table-hover" width="100%">
                                                    <thead>
                                                        <h3>Mañana</h3>
                                                        <tr>
                                                            <th style="width:14%;" class="text-center">Lunes</th>
                                                            <th style="width:14%;" class="text-center">Martes</th>
                                                            <th style="width:14%;" class="text-center">Miércoles</th>
                                                            <th style="width:14%;" class="text-center">Jueves</th>
                                                            <th style="width:14%;" class="text-center">Viernes</th>
                                                            <th style="width:14%;" class="text-center">Sabado</th>
                                                            <th style="width:14%;" class="text-center">Domingo</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                        <% @disponibilidad.first[1][0]["manana"].each do |turno| %>
                                                            <td class= "text-center">
                                                                <select class="selectpicker form-control">
                                                                    <option></option> 
                                                            <% turno["turno"].each do |hora| %>
                                                                <option><%= hora["hora"].to_datetime.strftime("%H:%M%p") %><br></option>
                                                            <% end %>
                                                            </select>  
                                                            </td>
                                                         <% end %>
                                                        </tr>
                                                    </tbody>
                                                </table>

                                                <table class="tabla-horarios table table-bordered table-hover" width="100%">
                                                    <thead>
                                                        <h3>Tarde</h3>
                                                        <tr>
                                                            <th style="width:14%;" class="text-center">Lunes</th>
                                                            <th style="width:14%;" class="text-center">Martes</th>
                                                            <th style="width:14%;" class="text-center">Miércoles</th>
                                                            <th style="width:14%;" class="text-center">Jueves</th>
                                                            <th style="width:14%;" class="text-center">Viernes</th>
                                                            <th style="width:14%;" class="text-center">Sabado</th>
                                                            <th style="width:14%;" class="text-center">Domingo</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                         <tr>
                                                        <% @disponibilidad.first[1][1]["tarde"].each do |turno| %>
                                                            <td class= "text-center">
                                                                <select class="selectpicker form-control">
                                                                    <option></option> 
                                                            <% turno["turno"].each do |hora| %>
                                                                <option><%= hora["hora"].to_datetime.strftime('%H:%M%p' ) %><br></option>
                                                            <% end %>
                                                            </select>  
                                                            </td>
                                                         <% end %>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <h3>Datos Básicos Solicitante</h3>
                            <fieldset class="step-content">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <h3>¿Has usado el sistema de citas online?</h3>

                                        <div class="radio">
                                            <input type="radio" name="tipo_usuario" id="radio_usuario" value="Usuario_viejo"  onclick="mostrar(this.value)" checked="">
                                            <label for="radio_usuario">Si</label>
                                        </div>

                                        <div class="radio">
                                            <input type="radio" name="tipo_usuario" id="radio_nuevo" value="Usuario_nuevo"  onclick="mostrar(this.value)">
                                            <label for="radio_nuevo">No</label>
                                        </div>
                                        <div class="form-group">
                                            <label for="RazonCita">Motivo de la Cita:</label>
                                            <select class="selectpicker form-control">
                                                <option>Chequeo</option>
                                                <option>Consulta de Rutina</option>
                                            </select>    
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6" style="display: block">
                                        
                                        <div id="Usuario_viejo" style="display: block">
                                            <div class="form-group">
                                                <label >Email (*)</label>
                                                <input type="email" class="form-control" required="true" name="email" hidden="false" placeholder="">
                                            </div>
                                            <div class="form-group">
                                                <label>Contraseña (*)</label> 
                                                <input type="password" name="password" required="true" placeholder="" class="form-control">
                                            </div>                         
                                        </div>

                                        <div id="Usuario_nuevo" style="display: none">
                                            
                                            <div class="form-group">
                                                <label>Nombre y Apellido (*)</label>
                                                <input type="email" name="nombre_solicitante" required="true" class="form-control" placeholder="">
                                            </div>
                                            <div class="form-group">
                                                <label>Cédula (*)</label>
                                                <input type="email" name="cedula_solicitante" required="true" class="form-control" placeholder="">
                                            </div>
                                            <div class="form-group">
                                                <label>Email (*)</label>
                                                <input type="email" name="email_solicitante" required="true" class="form-control" placeholder="">
                                            </div>
                                            <div class="form-group" id="data_2">
                                                <label>Fecha de nacimiento (*)</label>
                                                <div class="input-group date">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                    <input type="text" name="fecha_nacimiento_solicitante" required="true" class="form-control">
                                                </div>
                                            </div>                             
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <h3>Datos Básicos Paciente</h3>
                            <fieldset class="step-content">
                                <div class="text">
                                    <div class="col-lg-4">
                                        <h3>¿Quién es el Paciente?</h3>
                                        <div class="radio">
                                            <input type="radio" name="tipo_paciente" id="paciente_solicita" value="paciente_solicita" checked="">
                                            <label for="paciente_solicita">Yo</label>
                                        </div>
                                        <div class="radio">
                                            <input type="radio" name="tipo_paciente" id="paciente_diferente" value="paciente_diferente">
                                            <label for="paciente_diferente">Otra Persona</label>
                                        </div>
                                        <h3>¿Como llegaste a nosotros?</h3>
                                        <div class="radio">
                                            <input type="radio" name="forma_contacto" id="fc_redes" value="Redes Sociales">
                                            <label for="fc_redes">Redes Sociales</label>
                                        </div>
                                        <div class="radio">
                                            <input type="radio" name="forma_contacto" id="fc_familiar" value="Familiar / Amigo">
                                            <label for="fc_familiar">Familiar / Amigo</label>
                                        </div>
                                        <div class="radio">
                                            <input type="radio" name="forma_contacto" id="fc_doctor" value="Doctor">
                                            <label for="fc_doctor">Doctor</label>
                                        </div>
                                        <div class="radio">
                                            <input type="radio" name="forma_contacto" id="fc_otros" value="Otros">
                                            <label for="fc_otros">Otros</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>Nombre y Apellido</label>
                                            <input type="text" name="nombre_paciente" requierd="true" class="form-control" placeholder="">
                                        </div>
                                        <div class="form-group">
                                            <label>Cédula</label>
                                            <input type="text" name="cedula_paciente" requierd="true" class="form-control" placeholder="">
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="email" name="email_paciente" requierd="true" class="form-control" placeholder="">
                                        </div>
                                        <div class="form-group" id="fecha_nacimiento_paciente">
                                            <label>Fecha de nacimiento</label>
                                            <div class="input-group date">
                                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" name="fecha_nacimiento_paciente" requierd="true" class="form-control">
                                            </div>
                                        </div>                                
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label for="InputSexo">Sexo</label>
                                            <select class="selectpicker form-control" name="sexo_solicitante">
                                                <option>Masculino</option>
                                                <option>Femenino</option>
                                            </select>    
                                        </div>
                                        <div class="form-group">
                                            <label for="InputTelefono">Teléfono</label>
                                            <input type="text" id="InputTelefono"  name="telefono_solicitante" class="form-control" data-mask="(999) 999-9999" placeholder="">
                                        </div>
                                        <div class="form-group">
                                            <label for="InputDireccion">Dirección</label>
                                            <input type="text" class="form-control" name="direccion_solicitante" id="InputDireccion" placeholder="">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <h3>Confirmación</h3>
                            <fieldset class="step-content">
                                <div class="row">
                                    <h3>Comprobante N°03475631</h3>
                                    <div class="col-lg-12">
                                        <div class="ibox float-e-margins">
                                            <div class="ibox-content">
                                                <table class="tabla-horarios table table-bordered table-hover" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th>Nombre y Apellido del Paciente</th>
                                                            <th>Cedula</th>
                                                            <th>Fecha de Solicitud</th>
                                                            <th>Fecha de la Cita</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>Daniel Rojas</td>
                                                            <td>V-19.436.882</td>
                                                            <td>03/03/2017</td>
                                                            <td>16/03/2017</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <table class="tabla-horarios table table-bordered table-hover" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th>Nombre y Apellido del Especialista</th>
                                                            <th>Especialidad</th>
                                                            <th>Razon de Cita</th>
                                                            <th>Hora</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>Elias Jose Pastran Morelio</td>
                                                            <td>Cardiologo</td>
                                                            <td>Chequeo</td>
                                                            <td>9:00am</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <table class="tabla-horarios table table-bordered table-hover" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th>Dirección de la Clinica</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>Carrera 28, entre calles 9 y 10, N° 9-124, Concepción, Barquisimeto</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

