<section id="detalle-evento" class="gray-section article">
	<div class="container">
		<div class="row">
	        <div class="col-lg-10 col-lg-offset-1">
	            <div class="ibox">
	                <div class="ibox-content">
	                    <div class="text-center article-title">
	                        <span class="text-muted"><i class="fa fa-clock-o"></i> <%= @evento["created_at"].to_date.strftime("%d/%m/%Y") %></span>
	                        <h1>
	                            <%= @evento["descripcion"] %>
	                        </h1>
                          	<img src="<%= @evento["foto_url"]%>" width="200">
	                    </div>
	                    <div>
	                    	<%= @evento["contenido"].html_safe %>
	                    </div>
	                    <hr>
	                    <div class="row">
	                    	<div class="col-md-6 text-left">
	                            <h2>Ubicacion:</h2>
	                            <h3><%= @evento["ubicacion"]["descripcion"] %></h3>
	                    	</div>
	                    	<div class="col-md-6 text-left">
	                            <h2>Fecha del Evento:</h2>
	                            <h3><%= @evento["fecha"].to_date.strftime("%d/%m/%Y") %></h3>
	                    	</div>
	                    </div>
	                    <hr>
	                    <div class="row">
	                        <div class="col-md-6">
	                            <h3>Categorias:</h3>
	                            <a class="btn btn-dark-blue btn-xs" style="padding: 0px 20px;" type="button" href="<%= eventos_categoria_path(@evento["tipo_evento"]["slug"])%>">
	                            <%= @evento["tipo_evento"]["descripcion"] %></a>
	                        </div>
                            <div class="col-md-6">
	                            <h3>Todos los Eventos</h3>
                                <a class="btn-dark-blue btn-xs" style="padding: 0px 20px;" type="button" href="<%= eventos_path %>"><i class="fa fa-arrow-left"></i> Volver</a>
                            </div>
	                    </div>
	                </div>
	            </div>
	        </div>
	    </div>
    </div>
</section>