<section id="detalle-noticia" class="gray-section article">
	<div class="container">
		<div class="row">
	        <div class="col-lg-10 col-lg-offset-1">
	            <div class="ibox">
	                <div class="ibox-content">
	                    <div class="text-center article-title">
	                        <span class="text-muted"><i class="fa fa-clock-o"></i> <%= @noticia["created_at"].to_date.strftime("%d/%m/%Y")%></span>
	                        <h1>
	                            <%= @noticia["titulo"] %>
 	                        </h1>
	                    </div>
	                    <div>
	                    	<%= @noticia["contenido"].html_safe %>
	                    </div>
	                    <hr>
	                    <div class="row">
	                        <div class="col-md-6">
	                            <h3>Categoria:</h3>
	                            <a class="btn btn-dark-blue btn-xs" style="padding: 0px 20px;" type="button" href="<%= noticias_categoria_path(@noticia["tipo_noticia"]["slug"])%>"><%= @noticia["tipo_noticia"]['descripcion'] %></a>
	                        </div>

                            <div class="col-md-6">
	                            <h3>Todas las Noticias</h3>
                                <a class="btn-dark-blue btn-xs" style="padding: 0px 20px;" type="button" href="<%= noticias_path %>"><i class="fa fa-arrow-left"></i> Volver</a>
                            </div>
	                    </div>
	                    
	                </div>
	            </div>
	        </div>
	    </div>
    </div>
</section>