<section id="categoria-servicios" class="white-section unique-section">
  <div class="container">
    <h2 class="title-section">Servicios</h2>
    <div class="row">
    <% @categoria_servicios.each do |categoria_servicio| %>
      <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">
        <div class="content-categoria-servicio">
          <div class="image-content-categoria-servicio">
            <img class="img-categoria-servicio" height="120" src="<%= image_path('carousel/alice-fondo-consulta-medica.jpg') %>">
          </div>
          <div class="title-categoria-servicio">
            <h2 class="text-white"><strong><%= categoria_servicio.nombre %></strong></h2>
          </div>
          <div class="content-list-especialidades">
            <ul class="list-especialidades">
            <% categoria_servicio.especialidades.first(5).each do |especialidad| %>
              <% if categoria_servicio.id == 1 %>
                <li>
                  <%= link_to especialidad.nombre, categoria_servicio_especialidad_servicio_path( categoria_servicio.slug, especialidad.slug, especialidad.servicios.first(1)) %>
                </li>
              <% else %>
                <li>
                  <%= link_to especialidad.nombre, categoria_servicio_especialidad_path(categoria_servicio.slug, especialidad.slug) %>
                </li>
              <% end %>
            <% end %>
              <li class="ver-mas">
                <%= link_to categoria_servicio_path(categoria_servicio.slug), class: "link-ver" do %>
                  <i class="fa fa-plus"></i> Servicios
                <% end %>
              </li>
            </ul>
          </div>
          <div class="content-btn-categoria-servicio">
            
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</section>