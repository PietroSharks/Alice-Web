<section id="suscripcion" class="white-section" style="background: transparent url('<%= image_path('cita/suscripcion-alice.jpg') %>')  50% 0 no-repeat; background-size: cover;">
	<div class="container">
		<h2 class="title-section"></h2>
		<div class="row">
            <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12"></div>
			<div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
				<div class="content-suscripcion blue">
					<h2 class="text-white text-center title-content">Deseo Recibir el Bolet√≠n electronico</h2>
                    <%= form_tag(home_suscribirse_path, method: :post, id: "form-suscripcion") do %>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Nombres *</label>
                                    <input type="text" class="form-control" name="nombre" placeholder="Nombre">
                                </div>
                                <div class="form-group">
                                    <label>Apellidos*</label>
                                    <input type="text" class="form-control" name="apellido" placeholder="Apellido">
                                </div>
                                <div class="form-group">
                                    <label>Correo Electronico*</label>
                                    <input type="email" class="form-control" name="email" placeholder="Email">
                                </div>  
                            </div>
                            <div class="col-sm-8">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12"></div>
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <label>
                                            Preferencias
                                            <p>
                                                (Puede seleccionar multiples opciones)
                                            </p>
                                        </label>
                                        <div class="form-group">
                                            <label>Especialidades</label>
                                            <select data-placeholder="Especialidades" class="select-preferencias" multiple="multiple" name="especialidades[]" style="width:100%;" tabindex="-1">
                                                <% @especialidades.each do |especialidad| %>
                                                    <option value="<%= especialidad['id'] %>">
                                                        <%= especialidad['descripcion'] %>
                                                    </option>
                                                <% end %>
                                            </select>
                                        </div>  
                                        <div class="form-group">
                                            <label>Categorias de Noticia</label>
                                            <select data-placeholder="Categorias de Noticia" class="select-preferencias" multiple="multiple" name="tipo_noticias[]" style="width:100%;" tabindex="-1">
                                                <% @tipo_noticias.each do |tipo_noticia| %>
                                                    <option value="<%= tipo_noticia['id'] %>">
                                                        <%= tipo_noticia['descripcion'] %>
                                                    </option>
                                                <% end %>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Categorias de Evento</label>
                                            <select data-placeholder="Categorias de Evento" class="select-preferencias" multiple="multiple" name="tipo_eventos[]" style="width:100%;" tabindex="-1">
                                                <% @tipo_eventos.each do |tipo_evento| %>
                                                    <option value="<%= tipo_evento['id'] %>">
                                                        <%= tipo_evento['descripcion'] %>
                                                    </option>
                                                <% end %>
                                            </select>
                                        </div>        
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12"></div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12"></div>
                                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                        <button class="btn btn-dark-blue" type="submit">Suscribirse</button>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12"></div>
                                </div>
                            </div>    
                        </div>
                    <% end %>
                </div>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12"></div>
        </div>
    </div>
</section>

<% content_for :javascript do %>
    <script type="text/javascript">
        $(".select-preferencias").select2();
    </script>
<% end %>